<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="edu.eci.cvds.entities.Recurso" alias="Recurso"/>
        <typeAlias type="edu.eci.cvds.entities.TipoRecurso" alias="TipoRecurso"/>
        <typeAlias type="edu.eci.cvds.entities.RecursoRentado" alias="RecursoRentado"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver" />
                <property name="url" value="[URL definitiva del punto 8.14, cambiando '&' por '&amp;']"/>
                <property name="username" value="[User del punto 8 o del punto 7]" />
                <property name="password" value="[Contraseï¿½a del punto 8 o del punto 7]" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/RecursoMapper.xml"></mapper>
        <mapper resource="mappers/TipoRecursoMapper.xml"></mapper>
        <mapper resource="mappers/RecursoRentadoMapper.xml"></mapper>
    </mappers>
</configuration>
